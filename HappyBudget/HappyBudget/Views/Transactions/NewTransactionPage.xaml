                    Margin="20,0"
                      
                       HasShadow="True"
                       BorderColor="LightGray"
                       VerticalOptions="Center"
                       Grid.Column="0"
                       CornerRadius="30"
                       >
                <Grid ColumnDefinitions="2*,100"
