                        HorizontalOptions="End"
                        HeightRequest="20"
                        WidthRequest="30"
                          Scale="1"
                        BackgroundColor="Transparent"
                        Command="{Binding ShowCategoriesCommand}">
                        <Button.ImageSource>
                            <FontImageSource Color="Black"  
                                         FontFamily="{StaticResource Icons}"
                                         Glyph="{x:Static local:IconFont.AngleDown}"/>
                        </Button.ImageSource>
                    </Button>
                </Grid>
            </Frame>-->

            <Label Text="Amount"
                   FontSize="Subtitle"
                   Margin="10,20,10,0"/>
            <Entry Text="{Binding TransactionAmount}"
                   Keyboard="Numeric"
                   Margin="20,0"/>
           
            <Label Text="Transaction Date"
                   FontSize="Subtitle"
                   Margin="10,20,10,0"/>
            <DatePicker Margin="20,0"
                        Date="{Binding TransactionDate}"/>

            <Button TextColor="White"
                    Margin="20"
                    WidthRequest="200"
                    CornerRadius="30"
                    HorizontalOptions="CenterAndExpand"
                    Text="Save"
                    BackgroundColor="{StaticResource PrimaryColor}"
                    Command="{Binding AddTransactionCommand}"/>

        </StackLayout>
    </ContentPage.Content>

</ContentPage>