                        <Label Text="{Binding TransactionAccountName}" VerticalOptions="CenterAndExpand"
                                               HorizontalOptions="CenterAndExpand"
                                               HorizontalTextAlignment="Center"
                                               FontSize="16"
                                               TextColor="Black"/>
                    <Button  Grid.Column="1"
                      
                        HorizontalOptions="End"
                        HeightRequest="20"
                        WidthRequest="30"
                          Scale="1"
                        BackgroundColor="Transparent"
                        Command="{Binding ShowAccountsCommand}">
                        <Button.ImageSource>
                            <FontImageSource Color="Black"  
                                         FontFamily="{StaticResource Icons}"
                                         Glyph="{x:Static local:IconFont.AngleDown}"/>
                        </Button.ImageSource>
                    </Button>
                    </Grid>
                </pancakes:PancakeView>-->

            <Label Text="Category"
                   FontSize="Subtitle"
                   Margin="10,20,10,0"/>
            <Grid Margin="20,0"
                  ColumnDefinitions="*,*"
                  HorizontalOptions="CenterAndExpand">
                <pancakes:PancakeView CornerRadius="30"
                       
                       Shadow="{pancakes:ShadowMarkup Offset='5,5'}"
                      
                       
                       Grid.Column="0"
                       BackgroundColor="White">

                    <Label Text="{Binding TransactionCategoryName}"
                           TextColor="Black"
                           VerticalTextAlignment="Center"
                           FontSize="16"
                           HorizontalTextAlignment="Center"/>

                </pancakes:PancakeView>
                <Button 
                        TextColor="Black"
                        Text="Choose category"
                        HorizontalOptions="CenterAndExpand"
                        CornerRadius="30"
                        Grid.Column="1"
                        BackgroundColor="Transparent"
                        Command="{Binding ShowCategoriesCommand}">
                    <!--<Button.ImageSource>
                        <FontImageSource Color="Black"
                                         FontFamily="{StaticResource Icons}"
                                         Glyph="{x:Static local:IconFont.Palette}"/>
                    </Button.ImageSource>-->
                </Button>
            </Grid>
